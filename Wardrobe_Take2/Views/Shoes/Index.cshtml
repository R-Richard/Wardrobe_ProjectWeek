@*For the Footer*@
<div id="page-wrap">

    <h2>Shoes</h2>

  @*set up thumbnails - to print using a foreach - if over 4, set to move to next line*@
    <div id="body-content" class="row">

        @foreach (var item in Model)
        {
            if (counter != 0 && counter % 4 == 0)
            {
                @:</div>
                @:<div id="body-content" class="row">
        }

    <div class="col-sm-4 col-md-3">
        <div class="thumbnail">
            <img id="ImgSizeSmall" src="@Html.DisplayFor(modelItem => item.Photo)">
            <div class="caption">
                <h4>Item: @item.Nickname</h4>
                <p>Item Type: @item.Type</p>
                <p>Color: @item.Color</p>
                <p>Season: @item.Season</p>
                <p>Occasion: @item.Occasion</p>
                @*<p><a href="#" class="btn btn-primary" role="button">Play Now</a></p>*@
                <p>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }) |
                    @Html.ActionLink("Create New", "Create")
                </p>
            </div>
        </div>
    </div>
    counter++;
}
